
class { onCreate(){ GState.bind( this, ['locale'] ) } }

<span data-lang=( state.locale.language +( state.locale.variant ? '-'+ state.locale.variant : '' ) )
			class=input.class
			style="color:inherit;">
	${Locale( input.text || ( typeof input.renderBody == 'function' ? input.renderBody( out ) : '' ) )}
</span>
